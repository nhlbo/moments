    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Moments"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.main.newsFeed.newPost.NewPostActivityView"
            android:exported="false" />
        <activity
            android:name=".ui.main.viewFollowList.ViewFollowTabActivityView"
            android:exported="false" />
        <activity
            android:name=".ui.forgetPassword.ForgetPasswordActivityView"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".ui.main.MainActivityView"
            android:exported="false" />
        <activity
            android:name=".ui.signUp.SignUpActivityView"
            android:exported="false" />
        <activity
            android:name=".ui.main.latestMessage.LatestMessageActivityView"
            android:exported="false" />
        <activity
            android:name=".ui.main.settings.changePassword.ChangePasswordActivityView"
            android:exported="false" />
        <activity
            android:name=".ui.main.chat.ChatActivityView"
            android:exported="false" />
        <activity
            android:name=".ui.main.comment.CommentActivityView"
            android:exported="false" />
        <activity
            android:name=".ui.login.LoginActivityView"
            android:exported="false" />
        <activity
            android:name=".ui.main.settings.SettingsActivityView"
            android:exported="false" />
        <activity
            android:name=".ui.main.editProfile.EditProfileActivityView"
            android:exported="false" />
        <activity
            android:name=".ui.main.newMessage.NewMessageActivityView"
            android:exported="false" />
        <activity
            android:name=".ui.start.StartActivityView"
            android:exported="true"
            android:noHistory="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>