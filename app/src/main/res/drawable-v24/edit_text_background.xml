<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_focused="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/edit_text_focused_solid" />
            <stroke
                android:width="1dp"
                android:color="@color/edit_text_focused_stroke" />
            <corners android:radius= "10dp" />
        </shape>
    </item>
    <item app:state_error="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/edit_text_error_solid" />
            <stroke
                android:width="1dp"
                android:color="@color/edit_text_error_stroke" />
            <corners android:radius= "10dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/edit_text_default_solid"/>
            <stroke android:color="@android:color/transparent"/>
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/edit_text_default_solid"/>
            <stroke android:color="@android:color/transparent"/>
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>