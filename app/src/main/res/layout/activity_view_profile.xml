<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:nestedScrollingEnabled="true"
    android:scrollbars="vertical"
    app:layout_scrollFlags="scroll"
    tools:context=".ui.main.viewProfile.ViewProfileActivityView">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profile_header_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSecondary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcMediaGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEditProfile" />

    <Button
        android:id="@+id/btnEditProfile"
        style="@style/Theme.Moments.ButtonVariant1"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="Edit Profile"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView7"
        style="@style/Theme.Moments.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Janiver"
        app:layout_constraintStart_toStartOf="@+id/btnEditProfile"
        app:layout_constraintTop_toBottomOf="@+id/tvHashtagProfile" />

    <TextView
        android:id="@+id/tvHashtagProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gothic_light"
        android:text="\@son.tran"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/tvUsernameProfile" />

    <TextView
        android:id="@+id/tvUsernameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gothic_bold"
        android:text="Son Tran"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/tvHashtagProfile"
        app:layout_constraintTop_toBottomOf="@+id/ivAvatarProfile" />

    <TextView
        android:id="@+id/tvToPostList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:clickable="true"
        android:text="Posts"
        app:layout_constraintBottom_toBottomOf="@+id/ivAvatarProfile"
        app:layout_constraintStart_toEndOf="@+id/ivAvatarProfile"
        app:layout_constraintTop_toTopOf="@+id/ivAvatarProfile"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/tvToFollowersList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Followers"
        app:layout_constraintBottom_toBottomOf="@+id/ivAvatarProfile"
        app:layout_constraintEnd_toStartOf="@+id/tvToFollowingList"
        app:layout_constraintStart_toEndOf="@+id/tvToPostList"
        app:layout_constraintTop_toTopOf="@+id/ivAvatarProfile"
        app:layout_constraintVertical_bias="0.506"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/tvToFollowingList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:text="Following"
        app:layout_constraintBottom_toBottomOf="@+id/ivAvatarProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivAvatarProfile"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/tvPostsNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gothic_bold"
        android:text="21"
        app:layout_constraintBottom_toTopOf="@+id/tvToPostList"
        app:layout_constraintEnd_toEndOf="@+id/tvToPostList"
        app:layout_constraintStart_toStartOf="@+id/tvToPostList" />

    <TextView
        android:id="@+id/tvFollowersNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gothic_bold"
        android:text="12"
        app:layout_constraintBottom_toTopOf="@+id/tvToFollowersList"
        app:layout_constraintEnd_toEndOf="@+id/tvToFollowersList"
        app:layout_constraintStart_toStartOf="@+id/tvToFollowersList" />

    <TextView
        android:id="@+id/tvFollowingList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gothic_bold"
        android:text="21"
        app:layout_constraintBottom_toTopOf="@+id/tvToFollowingList"
        app:layout_constraintEnd_toEndOf="@+id/tvToFollowingList"
        app:layout_constraintStart_toStartOf="@+id/tvToFollowingList" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/ivAvatarProfile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:civ_border_color="@android:color/transparent"
        app:civ_border_width="1dp"
        app:civ_shadow="true"
        app:civ_shadow_color="#FFFFFF"
        app:civ_shadow_radius="2dp"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/profile_header_toolbar"
        app:srcCompat="@drawable/default_avatar"
        tools:ignore="MissingClass" />

</androidx.constraintlayout.widget.ConstraintLayout>