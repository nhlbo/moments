<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/ivAvatarUserLatestMessage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:civ_border_color="@color/dark_gray"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_avatar" />

    <TextView
        android:id="@+id/tvUserNameLatestMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Username"
        app:layout_constraintStart_toEndOf="@+id/ivAvatarUserLatestMessage"
        app:layout_constraintTop_toTopOf="@+id/ivAvatarUserLatestMessage" />

    <TextView
        android:id="@+id/tvLatestMessage"
        style="@style/Theme.Moments.TextView.SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is latest message"
        app:layout_constraintBottom_toBottomOf="@+id/ivAvatarUserLatestMessage"
        app:layout_constraintStart_toStartOf="@+id/tvUserNameLatestMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>