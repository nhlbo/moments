<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Moments" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/Theme.Moments.EditText</item>
        <item name="buttonStyle">@style/Theme.Moments.Button</item>
        <item name="android:textViewStyle">@style/Theme.Moments.TextView</item>
    </style>

    <style name="Theme.Moments.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/gothic_regular</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.Moments.TextView.Title" parent="Theme.Moments.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/gothic_bold</item>
    </style>

    <style name="Theme.Moments.TextView.SubTitle" parent="Theme.Moments.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="Theme.Moments.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">15dp</item>
        <item name="android:fontFamily">@font/gothic_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textColorHint">@color/secondary_text_color</item>
        <item name="strokeWidth">5dp</item>
        <item name="android:left">30dp</item>
    </style>

    <style name="Theme.Moments.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/primary_btn_color</item>
        <item name="android:height">40dp</item>
        <item name="android:fontFamily">@font/gothic_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Moments.ButtonVariant1" parent="Theme.Moments.Button">
        <item name="backgroundTint">@color/secondary_btn_color</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="Theme.Moments.ButtonVariant2" parent="Theme.Moments.Button">
        <item name="backgroundTint">@color/addition_btn_color</item>
        <item name="icon">@drawable/ic_logo</item>
        <item name="iconSize">20dp</item>
        <item name="iconPadding">-20dp</item>
    </style>
</resources>