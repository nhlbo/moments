<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Moments" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/Theme.Moments.EditText</item>
        <item name="buttonStyle">@style/Theme.Moments.Button</item>
        <item name="imageButtonStyle">@style/Theme.Moments.ImageButton</item>
        <item name="android:textViewStyle">@style/Theme.Moments.TextView</item>
        <item name="bottomNavigationStyle">@style/Theme.Moments.NavigationBar</item>
    </style>
    <!-- TextView style -->
    <style name="Theme.Moments.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/gothic_regular</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.Moments.TextView.Title" parent="Theme.Moments.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/gothic_bold</item>
    </style>

    <style name="Theme.Moments.TextView.SubTitle" parent="Theme.Moments.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="Theme.Moments.TextView.HelperText" parent="Theme.Moments.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/crimson</item>
    </style>
    <!-- EditText style -->
    <style name="Theme.Moments.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:fontFamily">@font/gothic_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textColorHint">@color/secondary_text_color</item>
        <item name="android:padding">15dp</item>
        <item name="strokeWidth">5dp</item>
        <item name="android:left">30dp</item>
    </style>
    <!-- Button style -->
    <style name="Theme.Moments.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/primary_btn_color</item>
<!--        <item name="android:height">40dp</item>-->
        <item name="android:fontFamily">@font/gothic_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Moments.ButtonVariant1" parent="Theme.Moments.Button">
        <item name="backgroundTint">@color/secondary_btn_color</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="Theme.Moments.ButtonVariant2" parent="Theme.Moments.Button">
        <item name="backgroundTint">@color/addition_btn_color</item>
        <item name="iconTint">@color/white</item>
        <item name="iconSize">25dp</item>
        <item name="iconPadding">-25dp</item>
    </style>

    <style name="Theme.Moments.ThinButton" parent="Theme.Moments.Button">
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- Image Button style -->
    <style name="Theme.Moments.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <!-- TextInputLayout style -->
    <style name="Theme.Moments.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="boxBackgroundColor">#FFF</item>
        <item name="boxStrokeColor">#FFF</item>
        <item name="strokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">false</item>
        <item name="errorTextColor">@color/crimson</item>
        <item name="errorTextAppearance">@style/Theme.Moments.TextView.HelperText</item>
    </style>
    <style name="Theme.Moments.TextInputLayout.Password" parent="Theme.Moments.TextInputLayout">
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/secondary_text_color</item>
        <item name="passwordToggleDrawable">@drawable/show_password_selector</item>
    </style>

    <!-- Image tint-->
    <style name="IconTint" parent="@style/Theme.AppCompat">
        <item name="icon_search">@drawable/ic_search</item>
        <item name="icon_home">@drawable/ic_home</item>
        <item name="icon_heart">@drawable/ic_heart_outline</item>
        <item name="icon_profile">@drawable/ic_user</item>
        <item name="icon_video">@drawable/ic_video</item>
        <item name="icon_comment">@drawable/ic_message_square</item>
        <item name="icon_share">@drawable/ic_share</item>
        <item name="icon_setting">@drawable/ic_settings</item>
        <item name="icon_option">@drawable/ic_more_vertical</item>
        <item name="icon_arrow">@drawable/ic_arrow_right</item>
        <item name="icon_arrow_reverse">@drawable/ic_arrow_left</item>
        <item name="icon_eye">@drawable/ic_hide_password</item>
        <item name="icon_eye_closed">@drawable/ic_show_password</item>
        <item name="icon_clear">@drawable/ic_search</item>
    </style>

    <style name="Theme.Moments.NavigationBar" parent="Widget.Design.BottomNavigationView">
        <item name="backgroundTint">@color/white</item>
        <item name="itemRippleColor">@null</item>
        <item name="itemBackground">@null</item>
    </style>


</resources>